

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Description</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/styles-nav.css">
</head>
<body>
    <nav class="navbar  navbar-expand-lg navbar-fixed-top">
        <div class="allElements">
        <div class = "navbar navbar-header">
            <img src="img/logo.svg" alt="Logo-Website" class="top-img-Main-Page">
        </div>
        <ul class="navbar-nav">
            
        </ul>
        <span><a href="/cart"><img class="cart-img" src="img/cart.svg" alt=""></a></span>
        <span class="AccountButton">Account</span>
        <span><a href="#"><img class="sign-out-img" src="img/logout.svg" alt=""></a></span>
    </div>
    </nav>
    <br>
    <h1 class="wishlist-title">Order No : <span id="order-des-title">ncowncin939</span></h1>
    <br><br>
    
    <% cartItems.forEach(item => { %>
        
        <% if(item.product){ %>
        <div class="common-container wishlist-container">
            <div class="wishlist-inside-container">
                <%if (item.product.productImage.data){%>
                    <img class="wishlist-image" src="data:image/<%=item.product.productImage.contentType%>;base64,<%=item.product.productImage.data.toString('base64')%>" alt="" srcset="">
                <%} else if(item.product.imageURL){%>
                    <img class="wishlist-image" src="<%=item.product.imageURL%>" alt="" srcset="">
                <%}%>
                <div class="item-description">
                    <b><h1><%= item.product.name %></h2></b><br>
                    <h4>Product Description</h4>
                    <br><h4>Number : <span><%=item.count%></span></h4>
                </div>
                <div class="wishlist-item-buttons">
                    
                    <form method="POST" action="/cart?_method=PATCH">
                        <input name="id" value="<%= item.product._id %>" hidden>
                        (Change Quantity: <input type=number min=1 max=15 value= <%= item.count %> name="count">
                        <input type="submit" value="Go">)
                    </form>
                    <form method="POST" action="/cart?_method=DELETE">
                        <input name="id" value="<%= item.product._id %>" hidden>
                        <button type="submit" class="wishlist-delete button-text">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <% } %>
    <% }) %>
    <div class="review-class"><a class="review-button" href="/cart/bill"><button class="review-button">Review Order</button></a></div>
    
</body>
</html> 